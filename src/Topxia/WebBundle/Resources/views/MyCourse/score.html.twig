{% extends 'TopxiaWebBundle:MyCourse:layout.html.twig' %}

{% block title %}{{'我的学分'|trans}} - {{ parent() }}{% endblock %}

{% set tab_nav = 'learning' %}

{% block main %}
    <div class="panel panel-default panel-col">
        <div class="panel-heading">{{'我的学分'|trans}}</div>
        <div class="panel-body">
             <table class="table table-striped table-hover">
                 <tr><th>课程名</th><th>完成时间</th><th>学分</th></tr>
                 {% for( s in sorce) %}
                      {% if(s.title != null) %}
                          <tr><td>{{ s.title }}</td><td>{{ s.createTime }}</td><td>{{ s.xuefen }}</td></tr>
                      {% else %}
                          <tr><td>{{ s.courseName }}</td><td>{{ s.createTime }}</td><td>{{ s.xuefen }}</td></tr>
                      {% endif %}
                 {% endfor %}
             </table>
        </div>
    </div>

{% endblock %}